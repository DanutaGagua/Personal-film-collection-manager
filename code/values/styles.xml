<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textSize">23sp</item>

    </style>

    <style name="FilmInfoStyle">
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/button_panel</item>
        <item name="android:layout_below">@+id/found_film_name</item>
    </style>

    <style name="FilmInfoCol2Style">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FilmInfoCol1Style">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="HorizontalButton" parent="AppTheme.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MainHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="HeaderStyle" parent="MainHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>
</resources>