<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".FilmListActivity">

    <TextView
        android:id="@+id/film_list_header"
        android:layout_gravity="center_horizontal"
        style="@style/HeaderStyle"
        android:text="Film list"/>

    <TextView
        android:id="@+id/film_list_info"

        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"

        style="@style/HeaderStyle"
        android:layout_below="@+id/film_list_header"/>

    <include
        layout="@layout/find_panel"
        android:id="@+id/find_panel"

        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/film_list_header"        />

    <include
        layout="@layout/film_item"
        android:id="@+id/list_header"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/find_panel"/>


    <ListView
        android:id="@+id/film_list"
        android:layout_below="@+id/list_header"
        android:layout_above="@+id/button_panel"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:longClickable="true">
    </ListView>

    <include
        layout="@layout/button_panel"
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>